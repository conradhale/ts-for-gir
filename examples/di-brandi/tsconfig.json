{
	"compilerOptions": {
		"lib": ["ESNext"],
		"types": ["@girs/gjs", "@girs/gjs/dom", "@girs/gjs/ambient"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"skipLibCheck": true
	},
	"files": ["main.ts", "brandi.ts"]
}
