{
	"compilerOptions": {
		"lib": ["ESNext"],
		"types": ["@girs/gjs", "@girs/gjs/dom", "@girs/gtk-4.0"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": false,
		"noEmit": true,
		"allowImportingTsExtensions": true
	},
	"files": ["main.ts", "needle.ts"]
}
