{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnknownTypeSelector": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/build",
			"!**/tmp",
			"!**/test",
			"!**/tests",
			"!**/templates",
			"!**/@types",
			"!**/gjs",
			"!**/types",
			"!**/vala-girs",
			"!**/*.js",
			"!**/*.mjs",
			"!**/*.cjs",
			"!**/.*",
			"!ts-for-gir-report.json"
		]
	}
}
