{
	"name": "@ts-for-gir-test/language-server-validation",
	"description": "Tests for TypeScript Language Server validation of generated GIR types",
	"type": "module",
	"private": true,
	"main": "src/index.ts",
	"scripts": {
		"test": "yarn generate && vitest run --no-isolate",
		"test:watch": "yarn generate && vitest --no-isolate",
		"test:dev": "vitest --no-isolate",
		"generate": "ts-for-gir-dev generate Adw-1 --girDirectories ../../girs"
	},
	"keywords": [
		"typescript",
		"language-server",
		"gir",
		"testing",
		"validation"
	],
	"author": "Pascal Garber <pascal@mailfreun.de>",
	"license": "MIT",
	"engines": {
		"node": ">=22"
	},
	"dependencies": {
		"@ts-for-gir/cli": "workspace:^",
		"@ts-for-gir/language-server": "workspace:*",
		"vitest": "^3.2.4"
	},
	"devDependencies": {
		"@types/node": "^24.2.1",
		"typescript": "^5.9.2"
	}
}
